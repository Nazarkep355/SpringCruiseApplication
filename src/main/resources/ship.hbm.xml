<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.example.SpringCruiseApplication.entity.Ship" table = "ships">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" type = "integer" column = "id">
            <generator class="native"/>
        </id>

        <property name = "economCost" column = "econom_cost" type = "integer"/>
        <property name = "economTotalPlaces" column = "econom_total_places" type = "integer"/>
        <property name = "enable" column = "enable" type = "boolean"/>
        <property name="middleCost" column="middle_cost" type="integer"/>
        <property name="middleTotalPlaces" column="middle_total_places" type="integer"/>
        <property name="name" column="name" type="java.lang.String" />
        <property name="premiumCost" column="premium_cost" type="integer"/>
        <property name="premiumTotalPlaces" column="premium_total_places"/>
        <property name="totalSeats" column="total_seats" type="integer"/>

    </class>
</hibernate-mapping>